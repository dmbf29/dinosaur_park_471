<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @park.banner_url %>);">
  <div class="container">
    <h1><%= @park.name %></h1>
    <p>Change your life and play with dinosaurs.</p>
    <%= link_to 'Add Dinosaur', new_park_dinosaur_path(@park), class: 'btn btn-primary' %>
  </div>
</div>
<div class="container">
  <div class="cards my-3">
    <% @park.dinosaurs.each do |dinosaur| %>
      <div class="card-category my-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dinosaur.image_url %>)">
        <%= dinosaur.name %>
        <%= link_to new_dinosaur_shift_path(dinosaur), class: 'card-add-link' do %>
          <i class="fas fa-plus-square"></i>
        <% end %>
        <%= link_to dinosaur_path(dinosaur), method: :delete, data: { confirm: "Make #{dinosaur.name} extinct?" }, class: 'card-remove-link' do %>
          <i class="fas fa-meteor"></i>
        <% end %>
        <div class="card-tags">
          <% dinosaur.attractions.each do |attraction| %>
            <span><%= attraction.name %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>